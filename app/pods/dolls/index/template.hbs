
<LinkTo  @route="dolls.doll.items" 
  @model={{this.model.slug}} class="bg-purple-300 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded">
          all Items 
</LinkTo>
<div class="grid gap-4 grid-cols-3 m-6">
    {{#each this.model as |doll|}}
        <LinkTo @route="dolls.doll.bio" @model={{doll.slug}} class="max-w-sm border-double border-8 border-purple-300 rounded overflow-hidden shadow-lg">
            <img class="w-full" src={{doll.propic}} alt="doll picture">
            <div class="px-6 py-4"> 
                <div class="font-bold text-3xl bg-purple-500 text-white rounded text-center mb-2">
                    I'm {{doll.name}}!
                </div>
            </div>
        </LinkTo>
    {{/each}}
</div>